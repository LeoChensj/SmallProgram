<view>普通选择器</view>
<picker class='picker-back' mode='selector' range='{{arr1}}' value='{{index1}}' bindchange='change1'>
  <label>
    当前国籍：{{arr1[index1]}}
  </label>
</picker>

<view class='seg'></view>

<view>多列选择器</view>
<picker class='picker-back' mode='multiSelector' range='{{arr2}}' value='{{index2}}' bindchange='change2'>
  <view>
    当前选择 {{arr2[0][index2[0]]}} {{arr2[1][index2[1]]}} {{arr2[2][index2[2]]}}
  </view>
</picker>

<view class='seg'></view>

<view>时间选择器</view>
<picker class='picker-back' mode='time' start='00:00' end='24:00' value='{{time}}' bindchange='change3'>
  <view>
    选择时间 {{time}}
  </view>
</picker>

<view class='seg'></view>

<view>日期选择器</view>
<picker class='picker-back' mode='date' start='0000-01-01' end='3000-01-01' value='{{data}}' fields='day' bindchange='change4'>
  <view>
    选择日期 {{date}}
  </view>
</picker>

<view class='seg'></view>

<view>地区选择器</view>
<picker class='picker-back' mode='region' value='{{region}}' bindchange='change5'>
  <view>
    选择日期 {{region[0]}}  {{region[1]}}  {{region[2]}}
  </view>
</picker>







